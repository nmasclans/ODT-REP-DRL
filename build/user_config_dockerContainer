### ODT User Configuration
set(CHEMISTRY "SIMPLEDLR" CACHE STRING "user mechanism source to add")
set(PARALLEL "no" CACHE STRING "build with mpi")
set(SILENT "yes" CACHE STRING "code output config")

### Extended ODT-REP-DRL capabilities

# Link cantera library
set(CANTERA_INCLUDE_DIR "/usr/include/cantera/" CACHE PATH "Cantera include location")
set(CANTERA_LIB_DIR "/usr/lib" CACHE PATH "Cantera library location")

# Link fmt library
set(FMT_LIB_DIR "/usr/src/fmt/build" CACHE PATH "fmt library location")

# Link MPI library
set(MPI_INCLUDE_DIR "/usr/lib/x86_64-linux-gnu/openmpi/include" CACHE PATH "MPI include location")